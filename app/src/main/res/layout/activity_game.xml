<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameActivity">

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/p1view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/p2view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1view" />

    <TextView
        android:id="@+id/p1title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4FC3F7"
        android:fontFamily="casual"
        android:text="PLAYER ONE CHOICE"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06999999" />

    <ImageView
        android:id="@+id/p1img"
        android:layout_width="186dp"
        android:layout_height="186dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/p1view"
        app:layout_constraintEnd_toEndOf="@+id/p1view"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/p1view"
        app:layout_constraintTop_toBottomOf="@+id/p1title"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/paper" />

    <Button
        android:id="@+id/p1paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAPER"
        app:layout_constraintBottom_toBottomOf="@+id/p1view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1img"
        app:layout_constraintVertical_bias="0.23000002" />

    <Button
        android:id="@+id/p1stone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STONE"
        app:layout_constraintBottom_toBottomOf="@+id/p1view"
        app:layout_constraintEnd_toStartOf="@+id/p1paper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1img"
        app:layout_constraintVertical_bias="0.23000002" />

    <Button
        android:id="@+id/p1scissor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCISSOR"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/p1paper"
        app:layout_constraintTop_toBottomOf="@+id/p1img"
        app:layout_constraintVertical_bias="0.18" />

    <TextView
        android:id="@+id/p2title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4FC3F7"
        android:fontFamily="casual"
        android:text="PLAYER TWO CHOICE"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/p2view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1view"
        app:layout_constraintVertical_bias="0.050000012" />

    <ImageView
        android:id="@+id/p2img"
        android:layout_width="186dp"
        android:layout_height="186dp"
        app:layout_constraintBottom_toBottomOf="@+id/p2view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2title"
        app:layout_constraintVertical_bias="0.120000005"
        app:srcCompat="@drawable/rock" />

    <Button
        android:id="@+id/p2paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAPER"
        app:layout_constraintBottom_toBottomOf="@+id/p2view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2img"
        app:layout_constraintVertical_bias="0.23000002" />

    <Button
        android:id="@+id/p2stone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STONE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/p2paper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2img"
        app:layout_constraintVertical_bias="0.22000003" />

    <Button
        android:id="@+id/p2scissor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCISSOR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/p2paper"
        app:layout_constraintTop_toBottomOf="@+id/p2img"
        app:layout_constraintVertical_bias="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>